.flash-box

.wrapper

  .chat-side

    .side-header
      %h3.header__name
        
      .side-header__box
        %p.side-header__box__user-name
          = current_user.name
        %ul.side-header__box__menu

          %li.side-header__box__menu__new-group
            = link_to new_group_path do
              %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
            = link_to edit_user_path(current_user) do
              %i.fa.fa-cog
              
    .groups

      .group
        - current_user.groups.each do |group|
          = link_to '#' do
            .group__group-name
              = group.name

            .group__latest-message
              メッセージはまだありません。
        
      

  .chat-main

    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          test
        %ul.main-header__left-box__member-list
          Member: 
          %li.main-header__left-box__member-list__member
          testname

      = link_to "#" do
        %div.main-header__edit-btn
          Edit

    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker
            仮免太郎
          %p.message__upper-info__date
            2018/09/07/(sat)18:27:31
          %p.message__text
            こんにちは！
      .message
        .message__upper-info
          %p.message__upper-info__talker
            test太郎
          %p.message__upper-info__date
            2019/09/07/(sat)18:27:31
        %p.message__text
          おはようございます！

    .form
      %form.new_message{}
        .input-box
          %input.input-box__text{placeholder: "type a message" }
            %label.input-box__image{for: "message_image", } 
              %i.fa.fa-image
              %input.input-box__image__file{type: "file", name: "message[image]", id: "message_image"}
        %input.submit-btn{type: "submit", name: "commit",value: "Send",}